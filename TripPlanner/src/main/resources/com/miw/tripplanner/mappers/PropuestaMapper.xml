<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miw.tripplanner.mappers.PropuestaMapper">

        <select id="getAllPropuestas">
            SELECT *
            FROM propuestas
        </select>

        <select id="getPropuesta">
            SELECT *
            FROM propuestas
            WHERE id = #{id}
        </select>

        <select id="createPropuesta" parameterType="com.miw.tripplanner.dtos.PropuestaDto">
            INSERT INTO propuestas (nombre, descripcion, precio, id_viaje)
            VALUES (#{nombre}, #{descripcion}, #{precio}, #{idViaje})
            RETURNING id
        </select>

        <update id="updatePropuesta" parameterType="com.miw.tripplanner.dtos.PropuestaDto">
            UPDATE propuestas
            SET nombre = #{propuestaDto.nombre}, descripcion = #{propuestaDto.descripcion}, precio = #{propuestaDto.precio}, id_viaje = #{propuestaDto.idViaje}
            WHERE id = #{id}
        </update>

        <delete id="deletePropuesta">
            DELETE FROM propuestas
            WHERE id = #{id}
        </delete>

        <delete id="deletePropuestaByIdViaje">
            DELETE FROM propuestas
            WHERE id_viaje = #{id}
        </delete>
    
        <select id="findPropuestasByIdViaje">
            SELECT *
            FROM propuestas
            WHERE id_viaje = #{idViaje}
        </select>

</mapper>